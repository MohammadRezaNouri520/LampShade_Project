@page
@model ServiceHost.Areas.Administration.Pages.Accounts.Role.CreateModel
@{
    Layout = "Shared/_AdminLayout";
    ViewData["Title"] = "| ایجاد نقش جدید";
}

<div class="row">
    <div class="col-12">
        <div class="panel panel-border panel-success">
            <div class="panel-heading">
                <h3 class="panel-title">ایجاد نقش جدید</h3>
            </div>
            <div class="panel-body">
                <form method="post">
                    <div class="row">
                        <div class="col-lg-4 col-md-4 col-sm-12">
                            <div class="form-group">
                                <label asp-for="NewRole.Title" class="control-label"></label>
                                <input class="form-control" asp-for="NewRole.Title">
                                <span asp-validation-for="NewRole.Title" class="error"></span>
                            </div>
                        </div>
                    </div>
                    <a class="btn btn-inverse btn-custom waves-effect waves-light" asp-page="./Index">بازگشت</a>
                    <button type="submit" class="btn btn-success waves-effect waves-light">ایجاد</button>
                </form>
            </div>
        </div>
    </div>
</div>