@page
@model ServiceHost.Pages.RegisterModel
@{
    ViewData["Title"] = "ثبت نام";
}


<div class="breadcrumb-area section-space--half">
    <div class="container wide">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb-wrapper breadcrumb-bg">
                    <div class="breadcrumb-content">
                        <h2 class="breadcrumb-content__title">ثبت نام</h2>
                        <ul class="breadcrumb-content__page-map">
                            <li><a asp-page="/Index">صفحه اصلی</a></li>
                            <li class="active">ثبت نام</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="page-content-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="page-wrapper">
                    <div class="page-content-wrapper">
                        <div class="row justify-content-md-center">
                            <div class="col-sm-12 col-md-12 col-lg-6 col-xs-12">
                                @if (!string.IsNullOrWhiteSpace(Model.Message))
                                {
                                    <div class="alert alert-danger text-center">
                                        @Model.Message
                                    </div>
                                }
                                <form method="post">
                                    <div class="login-form">
                                        <h4 class="login-title">ثبت نام</h4>
                                        <div class="row">
                                            <div class="col-md-6 col-12 mb-20">
                                                <label asp-for="NewAccount.FullName"></label>
                                                <input class="form-control" asp-for="NewAccount.FullName">
                                                <span class="text-danger" asp-validation-for="NewAccount.FullName"></span>
                                            </div>
                                            <div class="col-md-6 col-12 mb-20">
                                                <label asp-for="NewAccount.UserName"></label>
                                                <input class="form-control" asp-for="NewAccount.UserName">
                                                <span class="text-danger" asp-validation-for="NewAccount.UserName"></span>
                                            </div>
                                            <div class="col-md-12 mb-20">
                                                <label asp-for="NewAccount.Mobile"></label>
                                                <input class="form-control" asp-for="NewAccount.Mobile">
                                                <span class="text-danger" asp-validation-for="NewAccount.Mobile"></span>
                                            </div>
                                            <div class="col-md-6 mb-20">
                                                <label asp-for="NewAccount.Password"></label>
                                                <input class="form-control" asp-for="NewAccount.Password">
                                                <span class="text-danger" asp-validation-for="NewAccount.Password"></span>
                                            </div>
                                            <div class="col-md-6 mb-20">
                                                <label asp-for="NewAccount.RePassword"></label>
                                                <input class="form-control" asp-for="NewAccount.RePassword">
                                                <span class="text-danger" asp-validation-for="NewAccount.RePassword"></span>
                                            </div>
                                            <div class="col-sm-6 text-left text-sm-right">
                                                <span><i class="fa fa-sign-in"></i></span><a asp-page="/Login" class="forget-pass-link"> ورود به سایت</a>
                                            </div>
                                            <div class="col-12">
                                                <button class="register-button mt-0">ثبت نام</button>
                                            </div>
                                        </div>
                                    </div>

                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>